@using Amil.AsmWebCad.UI.Resources;

<div id="ConselhoModal" class="modal fade in" data-keyboard="false" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog modal-lg" >
        <div class="modal-content">
            <div class="modal-header">
                Incuir Documento
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <form class="form-horizontal" onsubmit="return false;" id="frmCursoProfissional">
                    <div class="row">
                        <div class="col-md-8">
                            <label class="control-label">Conselho</label>
                            @Html.DropDownList("Conselho_TipoConselho", new SelectList(ViewBag.TipoConselho, "Value" , "Text"),  @Resource.Selecione, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2">
                            <label class="control-label" style="white-space: nowrap;" id="lblUFConselho">UF</label>
                            @Html.DropDownList("Conselho_UF", new SelectList(ViewBag.UF, "Value" , "Text"),  @Resource.Selecione, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2">
                            <label class="control-label" id="lblNumeroConselho">Documento</label>
                            @Html.TextBox("Conselho_NumeroConselho", "", new { @class = "form-control sonumero", @maxlength = 15 })
                        </div>
                    </div>
                    <br />
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" title="@Resource.TituloBotaoSalvar" onclick="UsuarioConselho.Incluir();">Incluir</button>
                    <button type="reset" class="btn btn-outline btn-primary" onclick="UsuarioConselho.Cancelar();" title="@Resource.Cancelar">@Resource.Cancelar</button>
                </div>
            </div> 

        </div>
    </div>
</div>



