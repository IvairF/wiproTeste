@using Amil.AsmWebCad.UI.Resources;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Resource.NomePortal - @ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=11,IE=EDGE">
    @Styles.Render("~/Content/css",
                    "~/Content/UI")

    @Scripts.Render("~/bundles/jquery",
                    "~/bundles/jqueryval",
                    "~/bundles/modernizr",
                    "~/bundles/plugins",
                    "~/bundles/bootstrap",
                    "~/bundles/AmilFramework",
                    "~/bundles/AmilFrameworkMapas",
                    "~/bundles/jquery-ui")
</head>
<body>
    <div id="wrapper">
        <div  class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="row" >
                <div class="col-sm-1 col-md-1 col-lg-1 col-xl-1"></div>
                <div class="col-sm-9 col-md-9 col-lg-9 col-xl-9">
                    <h1>Americas - Cadastros e Configurações </h1>
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 col-xl-2">
                    <h1> <img alt="Amil" src="~/Content/Imagens/logoAmericas.png"  height="60" style="margin-top:-5px;" title="@Resource.Titulo_CadWeb"></h1>
                </div>
            </div>
        </div>
        <div id="page-wrapper" style="margin: 0 0 0 0;">
            <div class="panel panel-primary" style="width: 500px; margin: 50px auto 0 auto;">
                @RenderBody()
            </div>
            @Html.Partial("_ModalWaitPartial")
        </div>
    </div>
    <div class="footer-height">
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
