@using Amil.AsmWebCad.UI.Resources;
@model Amil.AsmWebCad.UI.Models.UsuarioPerfilModel

@{
    ViewBag.Title = "Usuarios do Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SectionHead{
    @Scripts.Render("~/bundles/perfil")

    <script type="text/javascript">
        Perfil.Urls.PesquisarUsuarioPerfil = '@Url.Action("PesquisaUsuarioPerfil", "Perfil")';
        Perfil.Urls.ExclusaoUsuario = '@Url.Action("ExclusaoUsuario", "Perfil")';
        Perfil.Urls.ManutencaoUsuario = '@Url.Action("Manutencao", "usuario")';
        Perfil.Urls.PesquisaPerfis = '@Url.Action("Pesquisa", "Perfil")';
        Perfil.Mensagens.ConfirmacaoExclusao = '@Resource.MensagemConfirmacaoExclusaoEditavel';
        
        PesquisaPerfil.Mensagens.SucessoExclusao = '@Resource.MensagemSucessoExclusao';

        $(document).ready(function () {
            UsuarioPerfil.Inicializar();
        });

    </script>
}

<div class="form-group">
    <div class="row">
        @Html.HiddenFor(a => a.Id)
        <div class="col-lg-3">
            <label class="control-label">@Resource.Perfil</label>
            @Html.TextBoxFor(a => a.DescricaoPerfil, (object)new { @class = "form-control", @maxlength = 70 })
        </div>
        <div class="col-lg-3">
            <label class="control-label">@Resource.Codigo</label>
            @Html.TextBoxFor(a => a.CodigoPerfil, (object)new { @class = "form-control", @maxlength = 50 })
        </div>
        <div class="col-lg-3">
            <label class="control-label">@Resource.Sistema</label>
            @Html.TextBoxFor(a => a.Sistema, (object)new { @class = "form-control", @maxlength = 50 })
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <br />
        <button type="reset" class="btn btn-primary" onclick="UsuarioPerfil.Voltar();" title="@Resource.TituloBotaoVoltar">@Resource.Voltar</button>
    </div>

</div>

<div class="panel-full">
    <div class="pull-left">
        <div class="form-actions">
            <button title="@Resource.TituloBotaoNovo" id="btnInserir" class="btn btn-primary btnBotaoGridDireita" type="button" onclick="UsuarioPerfil.PesquisaUsuarios();">
                <i class="glyphicon glyphicon-plus"></i>
            </button>
        </div>
    </div>
    <div id="dttUsuarios" class="dataTables_wrapper form-inline">
        <table id="grvUsuarios" style="cursor: pointer" data-dtid="idProtocolo" class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th data-dtcolumn="Nome">@Resource.Nome</th>
                    <th data-dtcolumn="DescricaoAtivo" data-column-class="align-mid width-10">@Resource.Ativo</th>
                    <th data-dtcolumn="DescricaoUsuarioTipo" data-column-class="align-mid width-10">@Resource.UsuarioTipo</th>
                    <th data-dtaction="Acoes" data-column-class="align-mid width-10">@Resource.Acoes</th>
                    <th data-dtcolumn="Id" data-column-class="hide" ></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

