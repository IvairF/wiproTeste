@model List<Amil.AsmWebCad.UI.Models.PainelConfigEspecViewModel>

<table class="table table-striped table-hover" id="especialidadesGrid">
    <thead>
        <tr>
            <th>Especialidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr data-idEspecialidade="@item.IdEspecialidade" data-id="@item.Id">
                    <td>@item.Nome</td>
                    <td>
                        <a href='#' onclick = "RemoverEspecialidade(@item.Id)" class="glyphicon glyphicon-trash confirm"></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
